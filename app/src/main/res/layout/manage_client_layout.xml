<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/indietro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="indietro" />

            <TextView
                android:id="@+id/nameClientManage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="prova"
                android:textColor="@color/ScritteTitolo"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ScritteTitolo"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="200dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_add"
                android:text="AGGIUNGI SCHEDA TECNICA"
                app:backgroundTint="@color/ScritteTitolo" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>