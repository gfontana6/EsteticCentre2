<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/indietro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="indietro" />

            <TextView
                android:id="@+id/nameClientManage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="prova"
                android:textColor="@color/ScritteTitolo"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ScritteTitolo"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="200dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_add"
                android:text="AGGIUNGI SCHEDA TECNICA"
                app:backgroundTint="@color/ScritteTitolo" />

            <TextView
                android:id="@+id/elencoPerformanceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="SCHEDE TECNICHE"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nameSearchPerformance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:ems="10"
                    android:hint="Trattamento"
                    android:textSize="18sp"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <Button
                    android:id="@+id/btn_search_performance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/ScritteTitolo"
                    android:backgroundTint="@color/ScritteTitolo"
                    android:text="Cerca"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp"
                    app:backgroundTint="@color/ScritteTitolo" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/TablePerformance"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>